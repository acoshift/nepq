{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "removeComments": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "sourceMap": false,
    "noResolve": true,
    "outDir": "./build",
    "isolatedModules": true
  },
  "filesGlob": [
    "src/**/*.ts",
    "typings/tsd.d.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": true
  },
  "files": [
    "src/index.ts",
    "src/nepq.d.ts",
    "typings/tsd.d.ts"
  ]
}
